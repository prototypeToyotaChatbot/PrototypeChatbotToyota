		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.30.4",
		"@sveltejs/vite-plugin-svelte": "^2.4.2",
		"svelte": "^4.2.19",
		"svelte-check": "^3.8.5",
		"typescript": "^5.0.0",
		"vite": "^4.4.9"
	},
	"dependencies": {
		"express": "^4.18.2",
		"node-fetch": "^3.3.2",
		"vite-plugin-pwa": "^0.17.5"
	}
}
